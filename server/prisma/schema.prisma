generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Application {
  id             Int      @id @default(autoincrement())
  userID         Int
  jobpostID      Int
  portfolio      String?
  application_at DateTime @default(now())
  status        Int

  user          Users    @relation(fields: [userID], references: [id], onDelete: Cascade)
  jobpost       Jobpost  @relation(fields: [jobpostID], references: [id], onDelete: Cascade)

  @@map("application")  // ชื่อจริงในฐานข้อมูล
}

model Jobpost {
  id           Int      @id @default(autoincrement())
  companyID       Int
  title        String
  description  String
  requirement  String
  salary       Int
  location     String
  posted_at   DateTime @default(now())
  jobtypeID    Int
  status       String
  company      Company @relation(fields: [companyID], references: [id], onDelete: Cascade)
  jobtype      Jobtype @relation(fields: [jobtypeID], references: [id], onDelete: Cascade)
  applications Application[]

  @@map("jobpost")
}

model Jobtype {
  id   Int    @id @default(autoincrement())
  name String
  type String

  jobposts Jobpost[]  // เชื่อมกับ jobpost

  @@map("jobtype")
}

model Users {
  id       Int    @id @default(autoincrement())
  name     String
  lastname String
  email    String @unique
  password String
  phone    String
  img      String
  role     String
  company   Company?
  applications Application[]

  @@map("users")
}

model Company {
  id        Int     @id @default(autoincrement())
  userID    Int     @unique
  user      Users   @relation(fields: [userID], references: [id], onDelete: Cascade)
  name      String
  description String
  phone     String
  address   String
  jobposts     Jobpost[]
  @@map("company")
}
